<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_open_mango_call" model="ir.actions.act_window">
        <field name="name">1C User</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">user.1c</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('id','=', active_id)]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                1C User
            </p>
        </field>
    </record>

    <record id="view_call_tree" model="ir.ui.view">
        <field name="name">1C User</field>
        <field name="model">user.1c</field>
        <field name="arch" type="xml">
            <tree multi_edit="1">
                <field name="description" optional="show" />
                <field name="user_id_ib" optional="show"/>
                <field name="not_valid" optional="show"/>
            </tree>
        </field>
    </record>

     <record id="view_mango_call_form" model="ir.ui.view">
        <field name="name">user.1c.form</field>
        <field name="model">user.1c</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                                class="oe_stat_button" icon="fa-calendar">
                    </div>
                    <group>
                        <group>
                            <field name="description"/>
                            <field name="user_id_ib"/>
                            <field name="not_valid" optional="show"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>

    </record>

    <record model="ir.actions.act_window" id="action_list_user">
        <field name="name">1C User</field>
        <field name="res_model">user.1c</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,kanban,form</field>
    </record>

</odoo>
