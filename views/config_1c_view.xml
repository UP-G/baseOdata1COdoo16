<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_open_1c_config" model="ir.actions.act_window">
        <field name="name">Profile 1C</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">config.1c</field>
        <field name="view_mode">tree,form</field>
        <field name="domain"></field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Config
            </p>
        </field>
    </record>

    <record id="view_1c_config_tree" model="ir.ui.view">
        <field name="name">Profile 1C</field>
        <field name="model">config.1c</field>
        <field name="arch" type="xml">
            <tree multi_edit="1">
                <field name="login" optional="show"/>
                <field name="password" optional="show"/>
                <field name="url" optional="show"/>
                <field name="infobase" optional="show"/>
            </tree>
        </field>
    </record>

     <record id="view_1c_config_form" model="ir.ui.view">
        <field name="name">config.1c.form</field>
        <field name="model">config.1c</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="login"/>
                            <field name="password"/>
                            <field name="url"/>
                            <field name="infobase"/>
                        </group>
                        <button name="get_users" string="Get users 1C" class="btn-primary"
                        type="object"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>

    </record>

    <record id="action_1c_config" model="ir.actions.act_window">
        <field name="name">Profile 1C</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">config.1c</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Config
            </p>
        </field>
    </record>

</odoo>
